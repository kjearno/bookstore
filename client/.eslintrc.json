{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": ["airbnb", "airbnb/hooks", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "consistent-return": "off",
    "import/no-cycle": "warn",
    "import/prefer-default-export": "off",
    "no-param-reassign": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@features", "./src/features"],
          ["@pages", "./src/pages"],
          ["@shared", "./src/shared"]
        ],
        "extensions": [".ts", ".js", ".jsx", ".json"]
      }
    }
  }
}
